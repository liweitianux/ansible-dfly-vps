{% set domain = "233233.xyz" %}
{% set hostmaster = "hostmaster." + network.domain %}
; {{ ansible_managed }}
$ORIGIN     {{ domain }}.
$TTL        1h

@           IN  SOA     {{ nameservers[0].ns[0] }}.  {{ hostmaster }}.  (
                        {{ domain | next_serial }}  ; serial number
                        1d          ; refresh
                        2h          ; retry
                        4w          ; expire
                        1h          ; minimum TTL
                        )

{% for server in nameservers %}
{% for ns in server.ns %}
@           IN  NS      {{ ns }}.  ; {{ server.name }}
{% endfor %}
{% endfor %}

@           IN  A       {{ network.ipv4.address }}
@           IN  AAAA    {{ network.ipv6.address }}

www         IN  CNAME   @
g           IN  CNAME   @
zw          IN  CNAME   @
*           IN  CNAME   @

; vim: set ft=bindzone:
